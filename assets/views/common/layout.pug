include ./toc.pug


doctype html
html(lang="en")
  head
    title #{meta.title}::
      block title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="styles/app.css",  rel="stylesheet")
    each css in meta.css
      link(href=css,  rel="stylesheet")
    -if(meta.counterCss)
      link(href=meta.counterCss,  rel="stylesheet")
    link(rel="icon", href="favicon.ico", type="image/x-icon")
    link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")

  body.SG-page
    include ./header.pug

    script var index = !{JSON.stringify(index)}

    div.SG-search
      div.SG-search__overlay
      select(type="search", placeholder="Start typing what you are looking for ...", data-d-search-box)

    div.SG-layout
      block content

    script(src="scripts/app.js")
    -if(meta.scripts)
        each script in meta.scripts
            script(src=script)
